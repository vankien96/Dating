<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vankien.dating.Views.Fragment.AroundTestFragment">
    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewBot"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:stackFrom="top"
        app:elevationEnabled="true"
        app:translationDiff="12"
        app:scaleDiff="0.02"
        app:swipeEnabled="true"
        app:swipeDirection="horizontal"
        app:swipeThreshold="0.75"
        app:visibleCount="3"
        >

    </com.yuyakaido.android.cardstackview.CardStackView>
    <LinearLayout
        android:id="@+id/viewBot"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_reject"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/no"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/btn_accept"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/yes"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/activity_main_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>
