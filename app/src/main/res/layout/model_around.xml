<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitedark">

    <ImageView
        android:id="@+id/imgAround"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:padding="@dimen/text_padding"
        android:background="@color/white"
       />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|center_vertical"
        android:padding="16dp"
        android:textStyle="bold"
        android:layout_below="@id/imgAround"
        android:text="@string/app_name"
        android:layout_toLeftOf="@+id/img_gender"
        android:background="@color/white"/>
    <ImageView
        android:id="@+id/img_gender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/female"
        android:scaleType="centerInside"
        android:padding="@dimen/button_image_padding"
        android:layout_below="@id/imgAround"
        android:layout_alignParentRight="true"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:id="@+id/btnNo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no"
            android:layout_marginRight="@dimen/edt_margin_right"
            />
        <ImageButton
            android:id="@+id/btnYes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/yes"
            />
    </LinearLayout>


</RelativeLayout>