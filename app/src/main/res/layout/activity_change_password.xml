<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vankien.dating.views.activity.ChangePasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/textview.text.change_password_title"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_back"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/edtOldPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/textview.text.old_password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/text_padding"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ToggleButton
            android:id="@+id/tgBtnOldPass"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/colorAccent"
            android:checked="true"
            android:textColor="@color/colorPrimaryDark"
            android:textOff="@string/toggle.textoff"
            android:textOn="@string/toggle.texton" />

    </RelativeLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_vertical_margin" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/edtNewPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/textview.text.new_password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/text_padding"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ToggleButton
            android:id="@+id/tgBtnNewPass"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:textOn="@string/toggle.texton"
            android:checked="true"
            android:textOff="@string/toggle.textoff"
            android:background="@color/colorAccent"/>
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/edtNewPassCompare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/textview.text.confirm_new_password"
            android:inputType="textPassword"
            android:padding="@dimen/text_padding"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnUpdatePass"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        android:paddingRight="@dimen/text_padding"
        android:paddingLeft="@dimen/text_padding"
        android:textSize="@dimen/text_size_small"
        android:text="@string/button.text.update_password"
        android:background="@drawable/shape_button_login"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</LinearLayout>
