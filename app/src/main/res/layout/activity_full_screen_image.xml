<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vankien.dating.views.activity.FullScreenImageActivity">
    <com.example.vankien.dating.helpers.TouchImageView
        android:id="@+id/imvAvatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>
    <RelativeLayout
        android:id="@+id/rlTitleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorOpacity"
        >
        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="@dimen/button_image_height"
            android:paddingBottom="@dimen/button_image_padding"
            android:paddingTop="@dimen/button_image_padding"
            android:paddingRight="@dimen/button_image_padding"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/colorOpacity"
            android:src="@drawable/ic_back_white"
            />

        <ImageButton
            android:id="@+id/imgBtnShare"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="@dimen/button_image_height"
            android:padding="@dimen/button_image_padding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorOpacity"
            android:src="@drawable/ic_share_white"/>
    </RelativeLayout>

</RelativeLayout>
