<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contentRoot"
    tools:context="com.example.vankien.dating.Views.Activity.ChatActivity">

    <RelativeLayout
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/btnBack"
            android:layout_toLeftOf="@+id/btnMenu"
            android:text="Trương Văn Kiên"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lvChat"
        android:divider="@null"
        android:dividerHeight="4dp"
        android:stackFromBottom="true"
        android:layout_below="@id/viewTop"
        android:layout_above="@id/view_below_lv"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">
    </ListView>
    <View
        android:id="@+id/view_below_lv"
        android:layout_above="@id/viewChatTextField"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:id="@+id/viewChatTextField"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <ImageButton
            android:id="@+id/buttonEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:src="@drawable/smiley"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/txtMessage"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/btnImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/buttonEmoji"
            android:layout_alignBottom="@+id/txtMessage"
            android:background="@android:color/transparent"
            android:src="@drawable/image_picker"
            android:scaleType="centerInside"
            android:padding="4dp"/>
        <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMessage"
            android:layout_toLeftOf="@+id/btnSend"
            android:layout_toStartOf="@+id/btnSend"
            android:layout_toRightOf="@+id/btnImage"
            android:layout_toEndOf="@+id/btnImage"
            app:emojiconSize="28sp"/>
        <ImageButton
            android:id="@+id/btnSend"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_alignBottom="@+id/txtMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>

</RelativeLayout>
