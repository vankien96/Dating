<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contentRoot"
    tools:context="com.example.vankien.dating.views.activity.ChatActivity">

    <RelativeLayout
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="@dimen/button_image_height"
            android:paddingRight="@dimen/button_image_padding"
            android:paddingBottom="@dimen/button_image_padding"
            android:paddingTop="@dimen/button_image_padding"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_toRightOf="@+id/btnBack"
            android:layout_toLeftOf="@+id/btnMenu"
            android:text="@string/textview.text.chat_name"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="@dimen/button_image_height"
            android:paddingTop="@dimen/button_image_padding"
            android:paddingBottom="@dimen/button_image_padding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lvChat"
        android:divider="@null"
        android:dividerHeight="@dimen/listview_dividerHeight"
        android:stackFromBottom="true"
        android:layout_below="@id/viewTop"
        android:layout_above="@id/view_below_lv"
        android:paddingLeft="@dimen/listview_padding"
        android:paddingRight="@dimen/listview_padding"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/listview_padding">
    </ListView>
    <View
        android:id="@+id/view_below_lv"
        android:layout_above="@id/viewChatTextField"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:id="@+id/viewChatTextField"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <ImageButton
            android:id="@+id/buttonEmoji"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="@dimen/button_image_height"
            android:padding="4dp"
            android:src="@drawable/smiley"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/txtMessage"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/btnImage"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="@dimen/button_image_height"
            android:layout_toRightOf="@+id/buttonEmoji"
            android:layout_alignBottom="@+id/txtMessage"
            android:background="@android:color/transparent"
            android:src="@drawable/image_picker"
            android:scaleType="centerInside"
            android:padding="4dp"/>
        <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMessage"
            android:layout_toLeftOf="@+id/btnSend"
            android:layout_toStartOf="@+id/btnSend"
            android:layout_toRightOf="@+id/btnImage"
            android:layout_toEndOf="@+id/btnImage"
            app:emojiconSize="@dimen/emoji_size"/>
        <ImageButton
            android:id="@+id/btnSend"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="@dimen/button_image_height"
            android:padding="4dp"
            android:layout_alignBottom="@+id/txtMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/viewProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="@dimen/progress_text_width"
            android:layout_height="@dimen/progress_text_height"
            android:background="@drawable/bg_pop_up"
            android:padding="@dimen/progress_text_padding"
            >
            <ProgressBar
                android:id="@+id/pbHeaderProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </ProgressBar>
            <TextView
                android:text="@string/textview.text.chat_sending_image"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
