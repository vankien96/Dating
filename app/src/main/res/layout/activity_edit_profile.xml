<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.vankien.dating.Views.Activity.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/textview.text.edit_profile_title"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:padding="@dimen/text_padding"/>

        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/tvTitle"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@+id/tvTitle"
            android:background="@drawable/ic_back"/>

        <ImageButton
            android:id="@+id/imgBtnEdit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/tvTitle"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/tvTitle"
            android:layout_toRightOf="@+id/tvTitle"
            android:background="@drawable/ic_check"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/textview.text.edit_profile_name"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="LINH KA"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/textview.text.edit_profile_age"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="23"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/textview.text.edit_profile_sex"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Female"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/textview.text.edit_profile_about"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Love pink color, hating betrayl. I'm a fan of Son Tung MTP, a responsibility skyer. I can sing, dance, speak everywhere, everything..."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/textview.text.edit_profile_photo"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/ic_add"
                    android:layout_column="1"
                    />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/img_avatar"
                    android:layout_column="2"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/img_avatar"
                    android:layout_column="3"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/img_avatar"
                    />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/img_avatar"
                    />
            </GridLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
