<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.vankien.dating.Views.Fragment.ProfileFragment">
    <RelativeLayout
        android:id="@+id/tvTitleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/textview.text.profile_title"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/imgBtnEdit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/imgBtnLogout"
            android:background="@drawable/ic_edit"/>

        <ImageButton
            android:id="@+id/imgBtnLogout"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_logout"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:background="@drawable/img_avatar"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgAvatar"
                android:text="LINH KA"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:padding="@dimen/text_padding"/>
            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvName"
                android:layout_alignBottom="@+id/tvName"
                android:text="23"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:padding="@dimen/text_padding"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:text="Viet Nam"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/text_padding"
                />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLocation"
                android:text="Turn that trick to make a litle leeway beat that nic but not the way that we play Dog"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/text_padding"
                />
            <LinearLayout
                android:id="@+id/llFriend"
                android:layout_below="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_padding"
                android:weightSum="5">
                <TextView
                    android:id="@+id/tvFriendLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textview.text.profile_friend"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvFriendValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="47"
                    android:textColor="@color/black"
                    android:padding="@dimen/text_padding"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAverage"
                android:layout_below="@+id/llFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_padding"
                android:weightSum="5">
                <TextView
                    android:id="@+id/tvAverageLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textview.text.profile_average"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvAverageValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="6.9"
                    android:textColor="@color/black"
                    android:padding="@dimen/text_padding"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnDiscoverySetting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_below="@id/llAverage"
                android:background="@drawable/shape_button_login"
                android:text="@string/button.text.profile_discovery_setting"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
